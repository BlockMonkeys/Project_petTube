extends layout/main

block contents
    .login__register__page
        .login__register__form
            h1.login__register__title 회원가입
            form(action="/register", method="POST")
                input(type="email", name="email", placeholder="ID (E-Mail)", required="true")
                input(type="password", name="password", placeholder="Password", required="true")
                input(type="password", name="password2", placeholder="Verify Password", required="true")
                input(type="submit", value="회원등록")
            .login__register__page__btn
                a(href="/") 뒤로가기