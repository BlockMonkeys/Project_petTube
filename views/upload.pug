extends layout/main

block contents
    .upload__container
        form(action="/video/upload", method="POST" enctype="multipart/form-data")
            input(type="file", name="file", accept="video/*")
            input(type="text", name="title", placeholder="영상제목", required=true)
            textarea(name="description", placeholder="영상설명" cols="37", rows="10", required=true)
            input.upload__btn(type="submit", value="업로드하기")